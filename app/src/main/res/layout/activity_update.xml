<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".uploadActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update details"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@color/lavender"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/updateImage"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/uploadimg" />
            <Spinner
                android:id="@+id/updateSpinner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:backgroundTint="@color/lavender"
                android:background="@drawable/lavender_layout"
                android:layout_marginTop="16dp" />
            <EditText

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/updateName"
                android:background="@drawable/lavender_layout"
                android:layout_marginTop="16dp"
                android:hint="inter your name"
                android:gravity="center"
                android:textColorHint="@color/lavender"
                android:textColor="@color/lavender"/>




            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/updateWork"
                android:background="@drawable/lavender_layout"
                android:layout_marginTop="16dp"
                android:hint="which type of worker"
                android:gravity="center"
                android:textColorHint="@color/lavender"
                android:textColor="@color/lavender"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/updateAdd"
                android:background="@drawable/lavender_layout"
                android:layout_marginTop="16dp"
                android:hint="@string/inter_your_address"
                android:gravity="center"
                android:textColorHint="@color/lavender"
                android:textColor="@color/lavender"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/updateNumber"
                android:background="@drawable/lavender_layout"
                android:layout_marginTop="16dp"
                android:hint="@string/inter_your_number"
                android:textColorHint="@color/lavender"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/lavender"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/save"
                android:id="@+id/updateButton"
                android:background="@color/lavender"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>